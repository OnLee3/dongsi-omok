---
import Layout from './BaseLayout.astro';
---

<Layout>
  <main>
    <slot />
  </main>
</Layout>
<style>
  main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to right,
      hsl(0, 0%, 92%) 0%,
      white 50%,
      black 50%,
      hsl(0, 0%, 8%) 100%
    );
  }
</style>
