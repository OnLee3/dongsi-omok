---
import Layout from '../layouts/BaseLayout.astro';
---

<Layout>
  <main>
    <h1>동시오목</h1>
    <ul>
      <li>
        <a href="pvp">방만들기</a>
      </li>
      <li>
        <a href="random">랜덤매칭</a>
      </li>
      <li>
        <a href="pve">인공지능</a>
      </li>
    </ul>
  </main>
</Layout>
<style>
  h1 {
    color: var(--text-color);
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  li {
    color: var(--text-color);
  }
  a {
    color: var(--text-color);
    text-decoration: none;
    padding: 4px 8px;
    border-radius: 4px;
    transition: opacity 0.3s cubic-bezier(0.5, 0, 0.5, 1);
    &:hover {
      opacity: 0.8;
    }
  }
</style>
